<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <TableRow
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:text="@string/quanjian_fisrt"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="Input content"
            android:padding="@dimen/margin_small" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/topbar"
        android:layout_margin="@dimen/margin_small"
        android:background="@drawable/bg_items"
        android:orientation="vertical"
        android:padding="@dimen/margin" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_news"
                style="@style/listItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_red_selector"
                android:onClick="onBtnClick"
                android:text="权健新闻"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_liveroom"
                style="@style/listItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_orange_selector"
                android:onClick="onBtnClick"
                android:text="权健直播间"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_culture"
                style="@style/listItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_sy_selector"
                android:onClick="onBtnClick"
                android:text="权健文化"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_meetings"
                style="@style/listItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_purple_selector"
                android:onClick="onBtnClick"
                android:text="权健会议集锦"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_products"
                style="@style/listItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_green_selector"
                android:onClick="onBtnClick"
                android:text="权健产品"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_story"
                style="@style/listItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_purple_selector"
                android:onClick="onBtnClick"
                android:text="讲述权健人自己的故事"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_hospital"
                style="@style/listItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_blue_selector"
                android:onClick="onBtnClick"
                android:text="权健肿瘤医院"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_health"
                style="@style/listItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_pink_selector"
                android:onClick="onBtnClick"
                android:text="权健健康讲堂"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_relatives"
                style="@style/listItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_sy_selector"
                android:onClick="onBtnClick"
                android:text="权健一家亲"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_custom"
                style="@style/listItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_pink"
                android:onClick="onBtnClick"
                android:text="自定义"
                android:textStyle="bold" />

            <View
                style="@style/listItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </TableRow>
    </LinearLayout>

</RelativeLayout>